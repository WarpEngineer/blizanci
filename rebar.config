{erl_opts, [debug_info,
            {parse_transform, lager_transform},
            warnings_as_errors
           ]}.

{deps, [
       lager,
       ranch,
       erlexec,
       {ppool,    {git, "https://github.com/mk270/ppool.git",
                   {branch, "master"}}},
       {realpath, {git, "https://github.com/mk270/realpath.git",
                   {branch, "master"}}}
]}.

{relx, [{release, {blizanci, "0.1.0"},
         [blizanci,
          sasl]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},

        {extended_start_script, true}]
}.

{profiles, [{prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}]
            }]
}.
